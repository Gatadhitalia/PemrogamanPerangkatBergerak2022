<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menubkg"
    tools:context=".TambahPesananActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="40dp"
            android:background="@drawable/blue_border">

            <TextView
                android:id="@+id/updateJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update\nPesanan"
                android:textStyle="bold"
                android:textSize="35sp"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"/>

            <EditText
                android:id="@+id/uploadNama2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/blue_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Nama Pemesan"
                android:textSize="16sp"
                android:gravity="start|center_vertical"
                android:textColor="@color/dark_blue"/>

            <EditText
                android:id="@+id/uploadTlp2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/blue_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:textSize="16sp"
                android:hint="No Telepon "
                android:gravity="start|center_vertical"
                android:textColor="@color/dark_blue"/>

            <EditText
                android:id="@+id/uploadMerek2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/blue_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Merk Sepatu"
                android:textSize="16sp"
                android:gravity="start|center_vertical"
                android:textColor="@color/dark_blue"/>

            <EditText
                android:id="@+id/uploadWarna2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/blue_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Warna Sepatu"
                android:textSize="16sp"
                android:gravity="start|center_vertical"
                android:textColor="@color/dark_blue"/>

            <EditText
                android:id="@+id/uploadUkuran2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/blue_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Ukuran Sepatu"
                android:textSize="16sp"
                android:gravity="start|center_vertical"
                android:textColor="@color/dark_blue"/>

            <Button
                android:id="@+id/updateButton"
                android:text="Update"
                android:textSize="18sp"
                app:cornerRadius = "20dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>


            <Button
                android:id="@+id/deleteButton"
                android:text="Hapus"
                android:textSize="18sp"
                app:cornerRadius = "20dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>